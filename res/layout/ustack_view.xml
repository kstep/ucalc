<?xml version="1.0" encoding="utf-8"?>

<com.mobeta.android.dslv.DragSortListView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dslv="http://schemas.android.com/apk/res/me.kstep.ucalc"

    android:id="@android:id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerHeight="1dp"
    android:drawSelectorOnTop="false"
    android:choiceMode="singleChoice"
    android:listSelector="?android:attr/colorActivatedHighlight"
    android:background="?android:attr/windowBackground"

    dslv:drag_enabled="true"
    dslv:collapsed_height="1px"
    dslv:drag_scroll_start="0.33"
    dslv:float_alpha="0.6"
    dslv:float_background_color="?android:attr/colorFocusedHighlight"
    dslv:slide_shuffle_speed="0.3"
    dslv:drag_start_mode="onDown"
    dslv:drag_handle_id="@+id/item_handle"
    dslv:remove_mode="flingRemove"
    dslv:remove_enabled="true"
    />

